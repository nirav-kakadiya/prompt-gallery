{
  "manifest_version": 3,
  "name": "Prompt Gallery Saver",
  "version": "1.0.0",
  "description": "Save AI prompts from Reddit, X/Twitter, or any webpage to your Prompt Gallery",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://prompt-gallery-six.vercel.app/*",
    "https://reddit.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://i.redd.it/*",
    "https://i.imgur.com/*",
    "https://pbs.twimg.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Prompt Gallery Saver"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://reddit.com/*",
        "https://www.reddit.com/*",
        "https://old.reddit.com/*"
      ],
      "js": ["src/content/reddit.ts"],
      "css": ["src/content/fab.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["src/content/twitter.ts"],
      "css": ["src/content/fab.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
